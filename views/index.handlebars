<h1>Burgers</h1>

<h2>Burgers not devoured</h2>

<form class="create-form">
  <div class="form-group">
    <label for="burger">burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>
  <button type="submit">Add burger</button>
</form>

    <ul>
    {{#each burgers}}
    {{#unless devoured}}
    <div id="burger" name="burger_name"></div>
    {{id}} - {{burger_name}}
    <button class="burgers" data-id="{{this.id}}">Devour Burger!</button>
    {{/unless}}
    {{/each}}
    </ul>

<h2>Devoured Burgers!</h2>
    <ul>
      {{#each burgers}}
      {{#if devoured}}
      <li class=".create-form">
        {{burger_name}}
      </li>
      {{/if}}
      {{/each}}
    </ul>